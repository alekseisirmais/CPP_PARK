//---------------------------------------------------------------------------

#include <fmx.h>
#pragma hdrstop

#include "Unit1.h"
#include "Unit2.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
bool passed_authorization() {
	return true;
}

void __fastcall TForm1::Button1Click(TObject *Sender)
{
	if (passed_authorization()) {
		TForm2 *f2 = new TForm2( this );
		Form1->Hide();
		f2->ShowModal();
		Form1->Show();
		delete f2;
	} else {
		ShowMessage("Your username or password is incorrect");
    }
}
//---------------------------------------------------------------------------


