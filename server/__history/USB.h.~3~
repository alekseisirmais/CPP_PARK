//---------------------------------------------------------------------------
#ifndef USBH
#define USBH
//---------------------------------------------------------------------------
#include <vector>

struct USB {
	int vid;
	int pid;
	bool isEjected;
	USB(int _vid, int _pid);
	const bool operator != (const USB &_usb);
	const bool operator == (const USB &_usb);
};

std::vector<USB> GetUSBListFromDB(AnsiString &file);
bool USBIsOnDatabase(AnsiString &file, USB *usb);
int AddUsbToDatabase(AnsiString &file, USB *usb);


#endif
