#include <fmx.h>

#ifndef UserH
#define UserH

class User {
private:
	long long id;
	UnicodeString login;
	UnicodeString password;

public:
	User();
	~User();
	User(const User& other);
	User& operator=(const User& other);

	void set_id(const long long value);
	long long get_id();
	UnicodeString get_login();
};

#endif